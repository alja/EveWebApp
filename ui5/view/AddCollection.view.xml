<mvc:View controllerName="custom.controller.AddCollection" 
    xmlns:mvc="sap.ui.core.mvc"
    xmlns:core="sap.ui.core" xmlns:form="sap.ui.layout.form" xmlns:l="sap.ui.layout" xmlns="sap.m">
<Dialog id="acdialog" contentHeight="100%" contentWidth="50%" title="AddCollection">
    <TabContainer id="tt" class="sapUiResponsiveContentPadding ">
        <items>
            <TabContainerItem id="ctab" name="EDM Collection">
                <content>
                    <SearchField id="csr" class="sapUiSizeCompact" placeholder="Filter" search=".onFilterPost"/>

                    <Table id="ctable" mode="SingleSelect">
                        <columns>
                            <Column >
                                <Text text="Product" />
                            </Column>
                            <Column >
                                <Text text="Supplier" />
                            </Column>
                        </columns>
                        <items>
                            <ColumnListItem>
                                <cells>
                                    <Text text="{firstName}" />
                                    <Text text="{lastName}" />
                                </cells>
                            </ColumnListItem>
                        </items>
                    </Table>

                </content>
            </TabContainerItem>
            <TabContainerItem id="atab" name="Association">
                <content>
                    <SearchField id="asr" class="sapUiSizeCompact" placeholder="Filter" search=".onFilterPost"/>
                    <Table id="atable" mode="SingleSelect">
                        <columns>
                            <Column >
                                <Text text="Product" />
                            </Column>
                            <Column >
                                <Text text="Supplier" />
                            </Column>
                        </columns>
                        <items>
                            <ColumnListItem>
                                <cells>
                                    <Text text="{firstName}" />
                                    <Text text="{lastName}" />
                                </cells>
                            </ColumnListItem>
                        </items>
                    </Table>
                </content>
            </TabContainerItem>
        </items>
    </TabContainer>
    <!--footer>
            <OverflowToolbar>
                <ToolbarSpacer/>
                <Button text="AddCollection" />
                <Button text="Close" />

            </OverflowToolbar>
        </footer-->

</Dialog>
</mvc:View>
